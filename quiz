import os #импорт библиотеки для очистки экрана
import time #импорт библиотеки для того чтобы результат (правильный/неправильный ответ не исчезал)
from termcolor import colored #библиотека для изменения цвета строк

questions_and_answers = [('Столица Франции?', 'париж'), #тапл с ответами и вопросами
    ('Столица Чехии?', 'прага'),
    ('Столица Японии?', 'токио'),
    ('Столица Швейцарии?', 'берн'),
    ('Столица Польши?', 'варшава'),
    ('Столица Китая?', 'пекин'),
    ('Столица Канады?', 'оттава')]

def quiz(level): #функция
        points = 0 #изначально очков 0
        for quest, answ in questions_and_answers: #запуск цикла
            print(colored(quest, 'yellow')) #напечатать вопрос желтым цветом
            answer = input('\nВведи ответ: ').lower() #ввод ответа и его преобразование в нижний регистр
            if answer == answ: #сверение ответов
                print(colored('\nПравильный ответ, +1000 очков!', 'green')) #напечатать если ответ правильный зеленым цветом
                points += 1000 #прибавляется по тысяче очков за каждый правильный
            else:
                print(colored('\nНеправильный ответ.', 'red')) #напечатать красным цветом если ответ неверен
            time.sleep(1) #остановка программы чтобы вывод (верно/неверно) сразу не пропадал
            os.system('clear') #очистка экрана
        print('Вы набрали очков:', points) #распечатать результат

quiz(0) #запуск викторины
